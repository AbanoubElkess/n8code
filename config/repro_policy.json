{
  "policy_version": "1.0.0",
  "release_gates": {
    "hard_suite_absolute_win_required": true,
    "moonshot_general_benchmarks_gate": false,
    "min_comparable_external_baselines_for_external_claim": 2,
    "require_claim_calibration_for_external_claim": true,
    "min_combined_average_reality_score_for_external_claim": 0.9,
    "max_public_overclaim_rate_for_external_claim": 0.05
  },
  "direction_gates": {
    "min_combined_average_reality_score": 0.9,
    "max_market_high_risk_opportunities": 0,
    "max_market_medium_risk_opportunities": 2
  },
  "attestation_gates": {
    "min_overlap_metrics": 2,
    "disallowed_placeholder_tokens": [
      "unknown",
      "pending",
      "placeholder",
      "tbd"
    ]
  },
  "seed_control": {
    "enabled": true,
    "default_seed": 20260217
  },
  "minimum_reporting": [
    "quality",
    "latency_ms",
    "cost_usd",
    "energy_joules",
    "reproducibility",
    "novelty"
  ],
  "falsification_rules": [
    "Every hypothesis must include at least one disproof test.",
    "Contradictory outputs must be surfaced in final artifacts.",
    "Absolute claims require explicit counterexample search."
  ]
}
